extends ../index

block content
	h1 Create Application
	if(err)
		.alert.alert-danger.col-md-8.col-md-offset-2 !{err}
	.row.col-md-10
		form.form-horizontal(method="post" action="/applications/create")
			.form-group
				label.control-label.col-sm-2(for="name") Name
				.col-sm-8: input.form-control(type="text" placeholder="Name" name="name" required)
			.form-group
				label.control-label.col-sm-2(for="desc") Description
				.col-sm-8: textarea.form-control(type="text" placeholder="Introduce your description" name="desc" required)
			.form-group
				label.control-label.col-sm-2(for="creationScript") Creation Script
				.col-sm-8: input.form-control(type="text" placeholder="example_create.sh" name="creationScript" required)
			.form-group
				label.control-label.col-sm-2(for="executionScript") Execution Script
				.col-sm-8: input.form-control(type="text" placeholder="example_execute.sh" name="executionScript" required)
			.tex-center.col-md-8.col-md-offset-2
				button.btn.btn-primary(type="submit") Create
				a.btn.btn-warning(href="/applications/") Cancel