extends ../index

block content
	h1 List Experiments
	hr
	-if(err)
		.alert.alert-danger.col-md-8.col-md-offset-2= err
	-if(!experiment)
		.alert.alert-danger.col-md-8.col-md-offset-2 There is no experiment.
	-else
		.row.col-md-12.sheet
			h3.text-center= experiment.name
			hr
			form.form-horizontal(method="POST" action="/experiments/update")
				input(type="hidden" name="id" value="#{experiment.id}")
				.form-group
					label.control-label.col-sm-2(for="name") Name
					.col-sm-8: input.form-control(type="text" placeholder="Name"  name="name" required value="#{experiment.name}")
				.form-group
					label.control-label.col-sm-2(for="desc") Description
					.col-sm-8: textarea.form-control(type="text" placeholder="Introduce your description" name="desc" ) #{experiment.desc}
				.form-group
					label.control-label.col-sm-2(for="applicationId") Application Id
					.col-sm-8: input.form-control(type="text" name="applicationId" required value="#{experiment.app_id}")
				-if(experiment.labels)
					h3.text-center Labels
					-for label, key in experiment.labels
						.form-group
							label.control-label.col-sm-2(for="#{key}") #{key}
							.col-sm-8: input.form-control(type="text" name="#{key}" value="#{label}")
				.col-md-4.col-md-offset-4
					button.btn.btn-primary(type="submit") Update
					a.btn.btn-warning(href="/experiments") Cancel

			